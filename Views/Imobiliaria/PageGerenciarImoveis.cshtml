<html>
<head>
    <meta charset="utf-8"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.js" integrity="sha512-+k1pnlgt4F1H8L7t3z95o3/KO+o78INEcXTbnoJQ/F2VqDVhWoaiVml/OEHv9HsVgxUaVW+IbiZPUJQfF/YxZw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
            color: #333;
        }

        h2 {
            text-align: center;
            color: #444;
        }

        a {
            display: inline-block;
            margin-bottom: 20px;
            color: #0066cc;
            text-decoration: none;
            font-weight: 500;
        }

        a:hover {
            text-decoration: underline;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 0 auto 20px auto;
        }

        form input[type="text"], form input[type="file"] {
            width: calc(100% - 20px);
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        form input[type="button"], form input[type="reset"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
            font-weight: bold;
        }

        form input[type="button"]:hover, form input[type="reset"]:hover {
            background-color: #0056b3;
        }

        form img {
            display: block;
            margin: 10px auto;
            height: 150px;
            width: 150px;
            border: 1px solid #ddd;
            border-radius: 8px;
            object-fit: cover;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        th, td {
            padding: 15px;
            text-align: left;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tbody tr:hover {
            background-color: #f1f1f1;
        }

        tbody img {
            width: 24px;
            cursor: pointer;
        }

        .table-buttons {
            display: flex;
            justify-content: space-evenly;
        }

        media (max-width: 768px) {
            form, table {
                width: 100%;
            }

            form input[type="button"], form input[type="reset"] {
                width: 48%;
                margin-top: 10px;
            }

            form img {
                height: 100px;
                width: 100px;
            }
        }
    </style>
</head>
<body>

<a href="/Imobiliaria/PageAreaAdministrativa">← Voltar</a>

<h2>Gerenciar Produtos</h2>

<form>
    <label for="inp">Foto do produto</label><br />
    <img id="foto" src="" alt="Preview da foto"><br />
    <input id="inp" type="file"><br />

    <label for="codigo">Código:</label>
    <input type="text" id="codigo" disabled><br>


    <label for="tipo">Tipo Animal:</label>
    <input type="text" id="tipo"><br>

    <label for="valor">Valor:</label>
    <input type="text" id="valor"><br><br>

    <div class="form-actions">
        <input type="button" value="Buscar" onclick="consultar()">
        <input type="button" value="Salvar" onclick="inserirOuAlterar()">
        <input type="reset" value="Limpar" onclick="limpar()">
    </div>
</form>

<table>
    <thead>
        <tr>
            <th>Editar</th>
            <th>Excluir</th>
            <th>Código</th>
            <th>Tipo</th>
            <th>Valor (R$)</th>
        </tr>
    </thead>
    <tbody id="corpo_da_tabela"></tbody>
</table>

<script>
    function limpar() {
        document.getElementById("foto").src = "";
    }

    function readFile() {
        if (!this.files || !this.files[0]) return;
        const fileReader = new FileReader();
        fileReader.addEventListener("load", function(evt) {
            document.querySelector("#foto").src = evt.target.result;
        });
        fileReader.readAsDataURL(this.files[0]);
    }

    document.querySelector("#inp").addEventListener("change", readFile);

    function editar(codigo, foto, tipo, valor) {
        document.getElementById("codigo").value = codigo;
        document.getElementById("foto").src = foto;
        document.getElementById("tipo").value = tipo;
        document.getElementById("valor").value = valor;
    }

    function confirmarExcluir(codigo) {
        if (confirm("Deseja realmente excluir?")) {
            excluir(codigo);
        }
    }

    function inserirOuAlterar() {
        var jsonEnvio = {
            codigo: document.getElementById("codigo").value,
            foto: document.getElementById("foto").src,
            tipo: document.getElementById("tipo").value,
            valor: document.getElementById("valor").value
        };
        var acao = jsonEnvio.codigo ? "Alterar" : "Inserir";
        $.ajax({
            url: "/Imovel/" + acao + "/",
            data: jsonEnvio,
            type: "post",
            success: function(resp) {
                alert(resp);
                    consultar(); 
            },
            error: function() {
                alert("Ocorreu um erro ao salvar os dados!");
            }
        });
    }

    function consultar() {
        $.ajax({
            url: "/Imovel/Buscar/",
            type: "post",
            success: function(resp) {
                var linhas = resp.map(item => `
                    <tr>
                        <td class="table-buttons">
                            <img src="/img/editar.png" alt="Editar" onclick="editar(${item.codigo}, '${item.foto}', '${item.tipo}', ${item.valor})">
                        </td>
                        <td class="table-buttons">
                            <img src="/img/excluir.png" alt="Excluir" onclick="confirmarExcluir(${item.codigo})">
                        </td>
                        <td>${item.codigo}</td>
                        <td>${item.tipo}</td>
                        <td>${item.valor}</td>
                    </tr>
                `).join('');
                document.getElementById("corpo_da_tabela").innerHTML = linhas;
            },
            error: function() {
                alert("Ocorreu um erro ao consultar os dados!");
            }
        });
    }

    function excluir(codigo) {
        $.ajax({
            url: "/Imovel/Excluir/",
            data: { codigo },
            type: "post",
            success: function(resp) {
                alert(resp);
                consultar();
            },
            error: function() {
                alert("Erro ao excluir!");
            }
        });
        }
        </script>

</body>
</html><br><br />
