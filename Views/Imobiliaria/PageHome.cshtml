<html>
<head>
	<meta charset="utf-8" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.js" integrity="sha512-+k1pnlgt4F1H8L7t3z95o3/KO+o78INEcXTbnoJQ/F2VqDVhWoaiVml/OEHv9HsVgxUaVW+IbiZPUJQfF/YxZw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<style>
		#banner {
			background-color: lightblue;
			color: #333;
			text-align: center;
			font-size: 24px;
			font-weight: bold;
			padding: 20px;
			margin: 20px auto;
			border: 2px solid #333;
			width: 80%;
			max-width: 800px;
		}

		#banner-image {
			display: block;
			margin: 0 auto;
			width: 80%;
			max-width: 600px;
			border-radius: 10px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
		}

		#imoveis {
			display: flex;
			flex-wrap: wrap;
			gap: 20px;
			margin-top: 20px;
			justify-content: center;
		}

		.imovel-item {
			border: 2px solid black;
			padding: 10px;
			text-align: center;
			width: 200px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
			border-radius: 5px;
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			min-height: 350px; /* Ajusta a altura mínima */
		}

		.imovel-item img {
			width: 100%;
			height: auto;
			border-radius: 5px;
		}

		.imovel-item p {
			margin: 5px 0;
		}

		.imovel-texts {
			flex-grow: 1;
			display: flex;
			flex-direction: column;
			justify-content: flex-start;
			align-items: center;
			min-height: 80px; /* Garante uma altura mínima uniforme para textos */
		}

		.btn-primary {
			margin-top: auto;
		}
	</style>
</head>
<body>

	<div id="banner">Bem vindo ao Animalia PetShop!!</div>

	<!-- Imagem abaixo do banner -->
	<img id="banner-image" src="~/img/Animais.jpg" alt="" />

	<br />
	<a href="/imobiliaria/PageLogin">Fazer Login</a>
	<br />
	<br />

	<h2>Lista de Produtos</h2>
	<br />

	<div id="imoveis"></div>

	<script>
		function consultar() {
			var jsonEnvio = {};
			$.ajax({
				url: "/Imovel/Buscar/",
				data: jsonEnvio,
				type: "post",
				success: function (resp) {
					var jsonVetor = resp;
					var linhas = "";

					for (i = 0; i < jsonVetor.length; i++) {
						var codigo = jsonVetor[i].codigo;
						var foto = jsonVetor[i].foto;
						var tipo = jsonVetor[i].tipo;
						var valor = jsonVetor[i].valor;

						linhas += `
							<div class="imovel-item">
								<img src="` + foto + `" alt="Imagem do imóvel" />
								<div class="imovel-texts">
									<p>` + tipo + `</p>
									<p>Valor: R$ ` + valor + `</p>
								</div>
								<a href="#" class="btn btn-primary">Comprar</a>
							</div>
						`;
					}

					document.getElementById("imoveis").innerHTML = linhas;
				},
				error: function () {
					alert("Ocorreu um erro ao consultar!!!");
				}
			});
		}
		consultar();
	</script>

</body>
</html>
